pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                echo "This is build stage of declarative pipeline"
            }
        }
        stage('Test') { 
            steps {
                echo "This is Test stage of declarative pipeline" 
            }
        }
        stage('Deploy') { 
            steps {
                echo "This is Deploy stage of declarative pipeline" 
            }
        }
    }
}
